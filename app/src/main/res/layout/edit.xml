<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.closetome.work3.index">

    <include layout="@layout/title2"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@layout/title2"
        android:layout_marginTop="65dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"><!--全体外边距-->

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:maxLines="5"
            android:gravity="left"
            android:hint="写点此刻的感受吧!"/>

        <RelativeLayout
            android:id="@+id/edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_content">

            <TextView
                android:id="@+id/edit_tagTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:textColor="#7876E0"
                android:textSize="12dp"
                android:text="添加标签"/>

            <View
                android:id="@+id/line1"
                android:layout_below="@+id/edit_tagTxt"
                android:layout_height="1px"
                android:background="#DEE0DB"
                android:layout_margin="10dp"
                android:layout_width="fill_parent"/>

            <RelativeLayout
                android:id="@+id/edit_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/line1">
            <TextView
                android:id="@+id/tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#DEE0DB"
                android:text="社会实践"/>

        </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edit_tag">

            <TextView
                android:id="@+id/edit_picTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:textColor="#7876E0"
                android:textSize="12dp"
                android:text="添加图片"/>

            <View
                android:id="@+id/line2"
                android:layout_below="@+id/edit_picTxt"
                android:layout_height="1px"
                android:background="#DEE0DB"
                android:layout_margin="10dp"
                android:layout_width="fill_parent"/>

            <RelativeLayout
                android:id="@+id/edit_pics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/line2">

                <ImageView
                android:id="@+id/pic_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/pic_1"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_toRightOf="@+id/pic_2"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/pic_1"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/pic_4"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>
                <ImageView
                    android:id="@+id/pic_9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="5dp"
                    android:background="#DEE0DB"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/location"
            android:layout_below="@+id/edit_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_check"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:hint="我的地址"/>

         </LinearLayout>

        <LinearLayout
            android:id="@+id/remind"
            android:layout_below="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_check"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="提醒我"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/remind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/check_grey"
            android:text=""/>

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_common"
            android:gravity="center"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="15sp"/>

   </RelativeLayout>
</ScrollView>
</RelativeLayout>
